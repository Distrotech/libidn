package "idn"
version "(@PACKAGE@) @VERSION@"

purpose "Command line interface to the library."

option "punycode-encode" e "Encode UTF-8 to Punycode" no
option "punycode-decode" d "Decode Punycode to UTF-8" no
option "idna-to-ascii"   a "Convert UTF-8 to ACE according to IDNA" no
option "idna-to-unicode" u "Convert ACE to UTF-8 according to IDNA" no
option "allow-unassigned" - "Toggle IDNA AllowUnassigned flag" flag off
option "usestd3asciirules" - "Toggle IDNA UseSTD3ASCIIRules flag" flag off
option "debug" - "Print debugging information" flag off
option "quiet" - "Don't print the welcome greeting" flag off
